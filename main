#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;


int main()
{
	//declaration
	string characters = "";
	int x = 0;

	//input
	cout << "Please enter characters to be put in reverse order: ";
	cin >> characters;

	//processing
	cout << "Your word backwards: ";
	for (x = characters.length() - 1; x >= 0; x--)
	{
		//output
		cout << characters[x];

	} //end for

	//end line on end for.
	cout << endl; 

    return 0;
}
